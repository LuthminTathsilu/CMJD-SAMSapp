<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #f0f0f0, #dcdcdc); -fx-background-color: #FF99A1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">

   <AnchorPane layoutX="150.0" layoutY="30.0" prefHeight="350.0" prefWidth="300.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

      <children>
         <Label layoutX="92.0" layoutY="30.0" text="Welcome," textFill="#333333">
            <font>
               <Font name="Arial Bold" size="24.0" />
            </font>
         </Label>

         <Label layoutX="129.0" layoutY="65.0" text="User" textFill="#555555">
            <font>
               <Font name="Arial" size="18.0" />
            </font>
         </Label>

         <Line endX="90.0" layoutX="150.0" layoutY="100.0" startX="-90.0" />

         <Button fx:id="CourseControlbtn" layoutX="75.0" layoutY="120.0" onAction="#CourseControl" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #FFF288;" styleClass="dashboard-button" text="Course Management" />

         <Button fx:id="StudentControlbtn" layoutX="75.0" layoutY="165.0" onAction="#StudentControl" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #FF8088;" styleClass="dashboard-button" text="Student Management" />


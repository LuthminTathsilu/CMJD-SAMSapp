         <Button fx:id="signOutbtn" layoutX="9.0" layoutY="320.0" onAction="#signOut" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;" text="Logout" />
      </children>
   </AnchorPane>

   <Label layoutX="155.0" layoutY="5.0" text="Student Attendance Management System" textFill="#2c3e50">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
